sitemap computer_room label="Computer room"
{
    Frame label="The TV" {
        Text
            item=Network_GF_ComputerRoom_TV
            label="Device is [MAP(network.map):%s]"
    }
    Frame label="TV backlight" {
        Text
            item=Network_GF_ComputerRoom_LedStrip
            label="Device is [MAP(network.map):%s]"
        Switch  
            item=LedStrip_GF_ComputerRoom_brightness
            label="Power[]"
            icon="switch"
        Slider
            item=LedStrip_GF_ComputerRoom_brightness
            label="Brightness"
        Switch 
            item=LedStrip_GF_ComputerRoom_color_temperature
            label="Temp"
            mappings=[0="1700", 33="3300", 67="5000", 100="6500"]
        Colorpicker
            item=LedStrip_GF_ComputerRoom_color
            label="Color"
    }
    Frame label="Chromecast" {
        Text
            item=Network_GF_ComputerRoom_Chromecast
            label="Device is [MAP(network.map):%s]"
        Switch
            item=Chromecast_GF_ComputerRoom_control
            label="Playback"
            icon="playback"
            mappings=[PLAY="PLAY", PAUSE="PAUSE"]
        Slider 
            item=Chromecast_GF_ComputerRoom_volume 
            label="Volume"
            icon="soundvolume"
    }    
}
