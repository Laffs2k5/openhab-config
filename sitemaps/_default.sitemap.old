sitemap default label="My first sitemap"
{
/*
    Frame label="Date" {
        Text item=CurrentDate
    }
*/
/*
    Frame label="test" {
        //Group item=gFF label="First Floor" icon="firstfloor"
        //Group item=gPersistChart label="Chart items" icon="chart"
        //Group item=gRoomOffice label="Office" icon="office"
        Switch
                item=Switch1
    }
*/
    Frame label="Kitchen" {
        Text label="The coffee pot"
        {
            Switch
                item=CoffeeTimer_control
                mappings=[0="0", -30="-30", 30="+30", 1="90"]
            Text
                item=CoffeeTimer_wallplug
                label="Coffee pot current status [%s]"
            Text
                item=CoffeeTimer_timeLeft
            Text
                item=CoffeeTimer_wallplug_rssi
// TBD more dynamic?
            Switch
                item=CoffeeTimer_chartPeriod
                label="Chart Period"
                mappings=[0="3h", 1="24h", 2="Week"]
            Webview
                url="https://EXAMPLE.TLD/static/grafana/moccamaster_last3Hours.html"
                height=10
                visibility=[CoffeeTimer_chartPeriod=="0"]
            Webview
                url="https://EXAMPLE.TLD/static/grafana/moccamaster_last24Hours.html"
                height=10
                visibility=[CoffeeTimer_chartPeriod=="1"]
            Webview
                url="https://EXAMPLE.TLD/static/grafana/moccamaster_lastWeek.html"
                height=10
                visibility=[CoffeeTimer_chartPeriod=="2"]
        }
    }
    Frame label="Living room" {
        Switch
            item=Chromecast_GF_LivingRoom_control
            mappings=[PLAY="PLAY", PAUSE="PAUSE"]
            visibility=[Network_GF_LivingRoom_ChromecastAudio=="ON"]
            icon=soundvolume
        Slider
            item=Chromecast_GF_LivingRoom_volume
            visibility=[Network_GF_LivingRoom_ChromecastAudio=="ON"]
            icon=soundvolume
    }
    Frame label="Computer room" {
            Switch
                item=Chromecast_GF_ComputerRoom_control
                mappings=[PLAY="PLAY", PAUSE="PAUSE"]
                visibility=[Network_GF_ComputerRoom_Chromecast=="ON"]
                icon=television
            Slider
                item=Chromecast_GF_ComputerRoom_volume
                visibility=[Network_GF_ComputerRoom_Chromecast=="ON"]
                icon=television
            /* TV backlight */
            Switch
                item=LedStrip_GF_ComputerRoom_brightness
                icon="switch"
                label="TV backlight power[]"
            Slider
                item=LedStrip_GF_ComputerRoom_brightness
                icon="dimmablelight"
            Switch
                item=LedStrip_GF_ComputerRoom_color_temperature
                label="TV backlight color temperature"
                mappings=[0="1700K", 33="3300K", 67="5000K", 100="6500K"]
            Colorpicker
                item=LedStrip_GF_ComputerRoom_color
    }
    Frame label="Misc" {
        Text label="Astronomical Data" icon="sun" {
            Text item=Sun_Elevation
            Text item=Sun_Azimuth
            Text item=Sunrise_Time
            Text item=Sunset_Time
            Text item=Moon_Elevation
            Text item=Moon_Azimuth
            Text item=Moon_Phase
        }
    }
}

